
<div class = "wrapper content-training">
	<div class = "main-content">
		<div class = "row">
			<div class = "col-xs-offset-1 athlete-name">
				Lista zawodników:
			</div>
		</div>
		<% @trainers.each do |t| %>
			<div class = "row">
				<div class = "col-xs-offset-1 col-xs-11 trainer-name">
					<%= t.surname + " "+t.name %>
				</div>
				
					<% @athletes = t.athletes_list %>
					<% if @athletes.size > 0 %>
						<% @athletes.each do |a| %>
						<div class = "col-xs-offset-2 col-xs-10">	
							<div clas>
								<%= link_to a.full_name, :controller => "trainings", :action => "trainings_history", :id => a.id %>	
							</div>
							
						</div>
						<% end %>
					<% else %>
						<div class = "col-xs-offset-2 col-xs-10">	
							<div clas>
								Ten trener nie ma żadnych zawodników.	
							</div>
							
						</div>
					<% end %>
			</div>
		<% end %>
	</div>
</div>
