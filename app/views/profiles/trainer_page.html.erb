<%= render "partials/header" %>

<div class = "wrapper content-training">
	<div class = "row margin-right-left trainer-page-content">
		<div class = "cent col-md-6">
			Moi zawodnicy: </br>
			<% @athletes.each do |a| %>
			<%= link_to a.full_name, :controller => :trainings, :action => "trainings_history", :id => a.id %> </br >
			<% end %>
			</br>
			<%= link_to "Dodaj zawodnika", athletes_add_athlete_path %>
		</div>
		<div class = "cent col-md-6">
			Ostatnie treningi:</br>
			<% @trainings.each do |t| %>
			<%= link_to t.date, trainings_path(t.id) %> </br>
			<% end %></br>
			<%= link_to "Wszystkie treningi", :controller => :trainings, :action => "trainer_trainings", :id => @trainer.id %>
			</br>
			</br>
			<%= button_to "Nowy trening", trainings_new_training_path, class: "btn btn-success" %>
		</div>
	</div>
	<div class = "row margin-right-left trainer-page-datas">

		<%= form_for @trainer, :url => url_for(:controller => "profiles", :action => "update_trainer"), method: :post do |f|%>
		<div id="data-edition" class="data-edition">
			<h3>Edytuj swoje dane</h3>
			<div class="form-group row">
				<%= f.label 'Imie', class: "col-xs-4 control-label" %>
				<div class="col-xs-6">
					<%= f.text_field :name, class: "form-control" %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label 'Nazwisko', class: "col-xs-4 control-label" %>
				<div class="col-xs-6">
					<%= f.text_field :surname, class: "form-control" %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label 'Email', class: "col-xs-4 control-label" %>
				<div class="col-xs-6">
					<%= f.text_field :email, class: "form-control" %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label 'Haslo', class: "col-xs-4 control-label" %>
				<div class="col-xs-6">
					<%= f.password_field :password, class: "form-control" %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label 'Potwierdz haslo', class: "col-xs-4 control-label" %>
				<div class="col-xs-6">
					<%= f.password_field :password_confirmation, class: "form-control" %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label 'Data urodzenia', class: "col-xs-4 control-label" %>
				<div class="col-xs-6">
					<%= f.date_select :birth, start_year: 1900, class: "form-control" %>
				</div>
			</div>
			<%= f.submit "Zapisz zmiany", class: "btn btn-primary"%>
			
		</div>
		<% end %>
	</div>

</div>
<%= link_to 'Wyloguj', auth_sign_out_path %>
<%= render "partials/footer" %>
