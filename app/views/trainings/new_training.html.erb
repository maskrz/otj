<div class = "wrapper content-training">

	<div class = "main-content">

		<h3>Dodaj nowy trening: </h3></br>
		<%= form_for :training, url: trainings_add_training_path, method: :post do |f| %>
		<div class="form-group row">
			<%= f.label 'Data', class: "col-xs-4 control-label right" %>
			<div class="col-xs-8">
				<%= f.date_select :date %>
			</div>
		</div>
		<div class="form-group row">
			<%= f.label 'Komentarz', class: "col-xs-4 control-label right" %>
			<div class="col-xs-8">
				<%= f.text_area :comment %>
			</div>
		</div>
		<div class="form-group row">
			<%= f.label 'Trener', class: "col-xs-4 control-label right" %>
			<div class="col-xs-8">
				<%= f.collection_select(:trainer_id, @trainers, "id", "display_name", {:selected => current_user.id}) %>
			</div>
		</div>

		<div class = "row cent">
			<%= f.submit "Dodaj trening", class: "btn btn-success"%>
		</div>
		<% end %>

		</br>
	</div>
</div>